@{ Layout = "_Signin"; }

@model PostUserModel

@{
    ViewData["Title"] = Localizer["Registrate"];
    var requestPath = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
    var requestQueryString = Context.Request.QueryString.HasValue ? Context.Request.QueryString.Value : "";
    var returnUrl = requestPath + requestQueryString;
}

<form id="setLanguage" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@returnUrl" class="form-inline">
    <div id="setlanguage" class="btn-group btn-group-sm" role="group" aria-label="Basic example">
        <input name="culture" type="submit" value="NL" class="btn btn-link"><span>|</span>
        <input name="culture" type="submit" value="EN" class="btn btn-link">
    </div>
</form>
<form class="mt-3 form-signin" asp-action="Index">
    <h1 class="h4 mb-3 font-weight-normal">MovieMind - @Localizer["Registrate"]</h1>
    @if (TempData.ContainsKey("ApiError"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ApiError"]
        </div>}
    <div class="form-group">
        <label asp-for="FirstName" class="control-label text-left"></label>
        <input asp-for="FirstName" id="FirstName" class="form-control" placeholder="@Localizer["First Name"]" autofocus>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label text-left"></label>
        <input asp-for="LastName" id="LastName" class="form-control" placeholder="@Localizer["Last Name"]">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label text-left"></label>
        <input asp-for="UserName" id="LastName" class="form-control" placeholder="@Localizer["Username"]">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label text-left"></label>
        <input asp-for="Email" id="Email" class="form-control" placeholder="E-mail">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label text-left"></label>
        <input asp-for="Description" id="Description" class="form-control" placeholder="@Localizer["Description"]">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label text-left"></label>
        <input asp-for="Password" type="password" id="Password" class="form-control" placeholder="@Localizer["Password"]">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label text-left"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@Localizer["Repeat password"]" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button class="btn btn-lg btn-outline-primary btn-block" type="submit">@Localizer["Registrate"]</button>
    <hr />
    <h3>@Localizer["Already an account?"]</h3>
    <a class="btn btn-lg btn-outline-info btn-block" asp-area="" asp-controller="Authentication" asp-action="Index">@Localizer["Login"]</a>
</form>


