@model websolutionsproject.models.Actors.PostActorModel

@{
    ViewData["Title"] = @Localizer["Create actor"];
}

<h1>@Localizer["Create actor"]</h1>
<hr />

<div class="border-bottom">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nationality" class="control-label"></label>
            <input asp-for="Nationality" class="form-control" />
            <span asp-validation-for="Nationality" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Birth" class="control-label"></label>
            <input asp-for="Birth" placeholder="@DateTime.Now" value="@DateTime.Now" textmode="Date" class="form-control" />
            <span asp-validation-for="Birth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MovieIds" class="control-label"></label>
            <select class="multiselect" asp-for="MovieIds" multiple>
                @await Component.InvokeAsync("MoviesSelect")
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="@Localizer["Create actor"]" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">@Localizer["Back to Actors"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
