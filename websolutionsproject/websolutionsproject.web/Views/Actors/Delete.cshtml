@model websolutionsproject.models.Actors.GetActorModel

@{
    ViewData["Title"] = @Localizer["Delete actor"];
}

<h1>@Localizer["Delete actor"]</h1>

<h3>@Localizer["Are you sure you want to delete this actor?"]</h3>
<div>
    <h4>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h4>
    <hr />

    <form asp-action="Delete">
        <input type="submit" value="@Localizer["Delete actor"]" class="btn btn-danger" />
        <a class="btn btn-info"  asp-action="Index">@Localizer["Back to actors"]</a>
    </form>
</div>
