@model websolutionsproject.models.Users.ForgotPasswordModel

@{
    ViewData["Title"] = Localizer["Forgot password"];
}

<h1>@Localizer["Forgot password"]</h1>

<form class="mt-3 signin form-signin" asp-action="ForgotPassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (TempData.ContainsKey("ApiError"))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ApiError"]
        </div>
    }
    <div class="form-group">
        <label asp-for="Email" class="sr-only"></label>
        <input asp-for="Email" id="UserName" class="form-control" placeholder="@Localizer["E-mail address"]" autofocus>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button class="btn btn-lg btn-outline-primary btn-block" type="submit">@Localizer["Reset password"]</button>
</form>

