@model websolutionsproject.models.Users.GetUserModel

@{
    ViewData["Title"] = Localizer["Delete user"];
}

<h1>@Localizer["Delete user"]</h1>

<h3>@Localizer["Are you sure you want to delete this user?"]</h3>
<div>
    <h4>@Html.DisplayFor(modelItem => modelItem.FirstName) @Html.DisplayFor(modelItem => modelItem.LastName)</h4>
    <h5>@Html.DisplayFor(modelItem => modelItem.Email)</h5>

    <form asp-action="Delete">
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
    </form>
</div>

<div class="mt-3">
    <a class="btn btn-info" asp-action="Index">@Localizer["Back to users"]</a>
</div>
