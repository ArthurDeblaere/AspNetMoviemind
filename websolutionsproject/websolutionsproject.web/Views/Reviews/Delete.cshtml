@model websolutionsproject.models.Reviews.GetReviewModel

@{
    ViewData["Title"] = Localizer["Delete review"];
}

<h3>@Localizer["Are you sure you want to delete this review?"]</h3>
<div>
    <h4>Review for @Html.DisplayFor(modelItem => modelItem.Movie.Name)</h4>
    <div class="rating">
        @Localizer["Rating"]
        <div class="stars">
            @for (int i = 0; i < Model.Rating; i++)
            {
                <span style="color: orange;" class="fa fa-star checked"></span>
            }
            @for (int i = 0; i < 10 - Model.Rating; i++)
            {
                <span class="fa fa-star"></span>
            }
        </div>
    </div>
    <p class="description">@Html.DisplayFor(modelItem => modelItem.Description)</p>
    <form asp-action="Delete">
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
    </form>
</div>
<div class="mt-3">
    <a class="btn btn-info" asp-action="Index">@Localizer["Back to reviews"]</a>
</div>